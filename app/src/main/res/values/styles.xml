<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.BtnButtonBar</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    </style>

    <!--Topic List Screen-->
    <style name="AppTheme.TopicTitle" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="AppTheme.CardActionImageButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TopicDescription" parent="TextAppearance.AppCompat.Small">
        <!--<item name="android:textSize">14sp</item>-->
    </style>

    <style name="AppTheme.AppTitleText" parent="TextAppearance.AppCompat.Title">
    </style>

    <!--Topic Details Screen-->
    <style name="BtnRead" parent="Base.Widget.AppCompat.Button">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorAccent">@color/colorBtnRead</item>
    </style>

    <!--Read Screen-->
    <style name="AppTheme.ReadTextView" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <!--Quiz Screen-->
    <style name="AppTheme.QuizText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.QuizEditText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textColor">@color/colorQuizSpotText</item>-->
        <item name="android:background">@drawable/quizspot_background</item>
    </style>

    <style name="AppTheme.QuizTextHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorHintBackground</item>
    </style>

    <style name="AppTheme.QuizCardTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.BtnButtonBar" parent="Widget.AppCompat.Button.Colored">

    </style>

</resources>
